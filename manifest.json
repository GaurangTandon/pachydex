{
  "manifest_version": 3,
  "name": "Pachydex",
  "version": "1.0.0",
  "description": "Your AI-powered memory vault - never forget what you've read on the web with semantic search.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "alarms", "storage", "unlimitedStorage", "offscreen", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/service_worker/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; base-uri 'none'; script-src 'self' 'unsafe-eval' 'wasm-eval' 'wasm-unsafe-eval'; default-src 'none';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "all_frames": true
    }
  ],
  "sandbox": {
    "pages": ["src/sandbox/sandbox.html"]
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Pachydex - Memory Vault",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
